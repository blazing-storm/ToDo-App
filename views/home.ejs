<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>
        <%= title %>
    </title>

    <script src="https://kit.fontawesome.com/7d41a86f63.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/styles/home.css">
</head>

<body>
    <div class="container">
        <h1>
            <%= title %>
        </h1>
        <div class="input-container">
            <form id="input-form" action="/add-task" method="POST">
                <div>
                    <label for="description">DESCRIPTION</label>
                    <input type="text" name="description" placeholder="What do you need to do?" required>
                </div>

                <div>
                    <label for="category">CATEGORY</label>
                    <select name="category" id="category">
                        <option disabled selected value> Choose a category </option>
                        <option value="Personal">Personal</option>
                        <option value="Work">Work</option>
                        <option value="School">School</option>
                        <option value="Cleaning">Cleaning</option>
                        <option value="Other">Other</option>
                    </select>
                </div>

                <div>
                    <label for="dueDate">DUE DATE</label>
                    <input type="date" name="dueDate">
                </div>
            </form>
        </div>

        <div class="button-container">
            <button type="submit" form="input-form">ADD TASK</button>
            <button type="submit" form="delete-form">DELETE TASKS</button>
        </div>

        <div class="task-container">
            <form id="delete-form" action="/delete-task" method="POST">
                <% for(let i = 0; i < task_list.length; i++) { %>
                    <div class="task">
                        <input type="checkbox" name= "tasks" value="<%= task_list[i]._id %>" id="<%= 'tasks' + (i + 1) %>" >

                        <label for="<%= 'tasks' + (i + 1) %>">
                            <div class="card">
                                <h3 class="description"> <%= task_list[i].description %> </h3>
                                
                                <% if(task_list[i].category != undefined) { %>
                                <span class="category"> <%= task_list[i].category %> </span>
                                <% } %>

                                <p class="date"> <%= task_list[i].dueDate %> </p>
                            </div>
                        </label>
                    </div>
                <% } %>
            </form>
        </div>
    </div>

    <script type="text/javascript" src="/scripts/home.js"></script>
</body>
</html>